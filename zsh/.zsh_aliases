# General
alias vim='nvim'
alias xclip='xclip -selection clipboard'
alias nvim-kickstart='NVIM_APPNAME="nvim-kickstart" nvim'

# todo cli
alias todo='vim $(pwd)/todo.md' # should automatically look for nearest todo.md file
alias todos='vim $(pwd)/todo.md' # should automatically look for nearest todo.md file

# cat with syntax-highlighting, line numbers, etc...
alias rcat='cat'
alias cat='bat'

# ripgrep instead of grep (fast, respects .gitignore)
alias grep='rg --color=auto'

# fd instead of find (easier syntax)
alias f='fd'
alias ff='fd .'          # find everything from current directory
alias fdir='fd --type d' # find only directories

# Eza
alias ls='eza -l --group-directories-first'
alias ll='eza -l --group-directories-first --git'
alias la='eza -la --group-directories-first --git'

# Just
alias j='just'

# Git
alias gcm='git checkout main'
alias gmm='git merge main'
alias grm='git rebase main'
alias gpm='git checkout main && git pull && git checkout -'
alias gnb='git checkout main && git pull && git checkout -b'
alias gs='git status'
alias gd='git diff'
alias gl='git log'
alias gco='git co $(git branch | sort | fzf --height=~20 --header="Checkout branch")'
alias glb='git co $(git lb | cut -d ":" -f 2 | fzf --height=~20 --header="Checkout branch")'
alias gw='git worktree'
alias gwt='cd $(git worktree list | sort | fzf --height=~10 --header="Change to another git worktree" | cut -d " " -f 1)'
alias zr='cd "$(git rev-parse --show-toplevel 2>/dev/null)"'
#
# Common directories
alias cdg='cd $(git rev-parse --show-toplevel 2>/dev/null || echo "$PWD")'
alias goliat='cd $HOME/repos/qm/goliat'
alias bbf='cd $HOME/repos/qm/baked-beans-frontend'
alias dotfiles='cd $HOME/repos/mine/dotfiles/'
alias rps='cd $(find $HOME/repos -maxdepth 5 ! -iname ".*" -type d | sort | fzf --header="Change to repos subdirectory")'
alias dfs='cd $(find $HOME/repos/mine/dotfiles -maxdepth 5 ! -iname ".*" -type d | sort | fzf --header="Change to repos subdirectory")'
alias data='cd $(find $HOME/data -maxdepth 5 ! -iname ".*" -type d | sort | fzf --header="Change to repos subdirectory")'

# Docker shortcuts
alias dc='docker compose'
alias docker-compose='docker compose'
alias stop-all-docker-containers='docker stop $(docker ps -q)'
alias remove-all-docker-containers='docker rm $(docker ps -qa)'
alias pause-all-docker-containers='docker pause $(docker ps -q)'
alias unpause-all-docker-containers='docker unpause $(docker ps -qa)'
alias remove-all-docker-images='docker rmi -f $(docker images -q)'

# k8s
alias k='kubectl'
alias k-dev='kubectl --context dev'
alias k-test='kubectl --context test'
alias bastion='kubectl --context  dev -n development port-forward svc/bastion 2222'
alias bastion-ssh='ssh -N -D 3000 mongo-bastion-dev'
alias argocd='kubectl -n argo port-forward services/argo-cd-argocd-server 8080:80'
