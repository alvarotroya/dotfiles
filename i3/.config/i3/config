# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Sets colors for i3 messages and i3bar
    set $bg-color 	     #0E5D78
    set $bar-color	     #2f343f
    set $inactive-bg-color   #2f343f
    set $text-color          #f3f4f5
    set $inactive-text-color #676E7D
    set $urgent-bg-color     #E53935

#   window colors           border              background         text                 indicator
    client.focused          $bg-color           $bg-color          $text-color          #ffffff
    client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #ffffff
    client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #ffffff
    client.urgent $urgent-bg-color $urgent-bg-color $text-color #ffffff

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    status_command i3status
    i3bar_command i3bar --transparency

    colors {
        background #00000090
        statusline #ffffff
        separator #666666

        focused_workspace  #4c7899 #285577 #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #2f343a #900000 #ffffff
        binding_mode       #2f343a #900000 #ffffff
    }
}

#Logout, Restart, Shutdown menu
set $Locker betterlockscreen -l dim
bindsym $mod+shift+x exec betterlockscreen -l dim
# set desktop background with custom effect
exec --no-startup-id betterlockscreen -w dim

# Alternative (set last used background)
# exec --no-startup-id source ~/.fehbg

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown, (d) dock, (u) undock
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker & systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker & sudo systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id sudo shutdown -h now, mode "default"  
    bindsym u exec --no-startup-id systemctl reboot, mode "default"
    bindsym d exec --no-startup-id systemctl reboot, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"


# Common places to open in editor
set $mode_editor Open in editor: (v) lvim, (b) bashrc, (i) i3config, (p) profile, (z) zshrc, (a) zsh_aliases (e) zshenv, (s) ssh_config
mode "$mode_editor" {
    bindsym v exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim', mode "default"
    bindsym b exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim ~/.bashrc', mode "default"
    bindsym s exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim ~/.ssh/config', mode "default"
    bindsym z exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim ~/.zshrc', mode "default"
    bindsym a exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim ~/.zsh_aliases', mode "default"
    bindsym e exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim ~/.zshenv', mode "default"
    bindsym p exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim ~/.profile', mode "default"
    bindsym i exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim ~/.config/i3/config', mode "default"
    bindsym Shift+i exec --no-startup-id gnome-terminal -- /bin/sh -c 'vim ~/.config/ideavim/ideavimrc', mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+v mode "$mode_editor"

