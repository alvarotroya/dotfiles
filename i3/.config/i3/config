# change focus across monitors
bindsym $mod+comma focus output $mon0
bindsym $mod+period focus output $mon1
bindsym $mod+slash focus output $mon2

# move containers across monitors
bindsym $mod+Shift+comma move workspace to output $mon0
bindsym $mod+Shift+period move workspace to output $mon1
bindsym $mod+Shift+slash move workspace to output $mon2

# move current workspace between monitors
bindsym $mod+Control+h move workspace to output left
bindsym $mod+Control+j move workspace to output down
bindsym $mod+Control+k move workspace to output up
bindsym $mod+Control+l move workspace to output right

